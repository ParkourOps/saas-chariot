{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["tailwind.config.ts", "env.d.ts", "mdx.d.ts", "src/**/*.ts", "src/**/*.vue", "src/**/*.mdx", "auto-imports.d.ts", "typed-router.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "framework/*": ["./src/framework_features/*"],
      "shared/*": ["./src/__shared_/*"]
    },
    // "types": ["vite/client"]
  }
}
